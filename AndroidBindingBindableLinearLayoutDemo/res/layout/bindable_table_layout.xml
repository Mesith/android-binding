<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"          
	xmlns:binding="http://www.gueei.com/android-binding/"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	    
	   <Button
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="20dip"
		    android:text="ChangeLayoutPos2"
		    binding:onClick="ChangeLayoutPos2"
		/>	        
	    
	    <Button
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="20dip"		    
		    android:text="AddNewItem"
		    binding:onClick="AddNewItem"
		/>
	    
	    <Button
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="20dip"		    
		    android:text="RemoveItemFromTop"
		    binding:onClick="RemoveItemFromTop"
		/>
	    
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >	  
	      
	    <Button
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="10dip"		    
		    android:text="RemovePos3"
		    binding:onClick="RemovePos3"
		/>
	    
	   <Button
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="10dip"		    
		    android:text="RemoveAll"
		    binding:onClick="RemoveAll"
		/>
	   
	   <Button
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="10dip"		    
		    android:text="Clear"
		    binding:onClick="Clear"
		/>	   
		
	   <Button
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="10dip"		    
		    android:text="Replace3"
		    binding:onClick="Replace3"
		/>	 
		
	   <Button
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="10dip"		    
		    android:text="Colspan2"
		    binding:onClick="Colspan2"
		/>	
		 	   
    
    </LinearLayout>

    <com.gueei.extension.BindableTableLayout
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:stretchColumns="1"	
    	binding:rowChild="ROW_CHILD('Children','LayoutId','Span')"    	
    	binding:itemSource="Rows"       	
		/>
    
    <!-- it's also possible to use a static layout for an item -->
    <!-- 
    	binding:itemPath="ITEM_LAYOUT('DataSource', @layout/bindable_linear_layout_item)"  
    -->			
    
</LinearLayout>