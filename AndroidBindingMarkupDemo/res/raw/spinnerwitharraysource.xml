<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:binding="http://www.gueei.com/android-binding/"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <Spinner
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	binding:itemTemplate="@layout/simple_spinner_dropdown_item"
    	binding:spinnerTemplate="@layout/simple_spinner_item"
    	binding:itemSource="ContinentNames"
    	binding:selectedItem="Selected"
    	binding:selectedPosition="SelectedPosition"
    />
    <TextView
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	binding:text="CONCAT('Selected position: ', SelectedPosition, '\nThe Following Spinner\\'s selection is linked with the above spinner')"
    />
    <Spinner
	    android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	binding:itemTemplate="@layout/simple_spinner_dropdown_item"
    	binding:spinnerTemplate="@layout/simple_spinner_item"
    	binding:itemSource="ContinentNames"
    	binding:onItemSelected="ToastContinent"
    	binding:selectedItem="Selected"
    	binding:selectedPosition="SelectedPosition"
    />
</LinearLayout>